#mainTabs{
	position: absolute;
	top: 64px;
	left: 200px;
	height: 40px;
	z-index: 10;
	overflow: auto;
	background:#fff;
}
#tab-content{
	position: absolute;
	top: 45px;
	left: 0px;
	width: 100%;
	z-index: 1;
}
.modal{
	top: 60px;
}
#mainTabs .tabs_item{
	float: left;
	cursor: pointer;
	padding: 4px 30px;
	color: #999;
	font-size: 12px;
	line-height: 32px;
	height:40px;
	background-color: #ffffff;
/* 	transition: transform .5s, opacity .7s; */
/* 	transform: translateY(10px); */
	border-bottom: 1px solid #ddd;
	border-right: 1px dotted #ddd;
	position:relative;
}
#mainTabs .tabs_item:hover{
	border-bottom: 1px solid #9acd32;
}
#mainTabs .tabshow{
  	color: #fe514a;
  	border-bottom: 3px solid #fe514a;
}

.close {
	display:none;
	position: absolute;
	width: 18px;
	height: 18px;
	line-height: 40px;
	right:5px;
	top:12px;
	vertical-align: middle;
}

#mainTabs .tabs_item .close {
	display: inline-block;
}

.close::before, .close::after {
  background: #1ebcc5;
}
.close::before, .close::after {
  content: '';
  position: absolute;
  height: 1px;
  width: 100%;
  top: 50%;
  left: 0;
  margin-top: -1px;
  background: #000;
}
.close::before {
  -webkit-transform: rotate(45deg);
  -moz-transform: rotate(45deg);
  -ms-transform: rotate(45deg);
  -o-transform: rotate(45deg);
  transform: rotate(45deg);
}
.close::after {
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -o-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.close.hairline::before, .close.hairline::after {
  height: 1px;
}

